<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center|top"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="@dimen/dp_240"
        android:orientation="vertical"
        android:background="@drawable/pop_black"
        android:layout_height="wrap_content">
        <com.xhwl.commonlib.uiutils.ClearEditText
            android:layout_marginTop="@dimen/dp_30"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_width="@dimen/dp_180"
            android:layout_height="wrap_content"
            android:id="@+id/create_family_et"
            android:background="@color/white"
            android:focusable="true"
            android:hint="@string/createfamily"/>
        <ImageView
            android:layout_gravity="center"
            android:layout_width="@dimen/album_dp_200"
            android:layout_height="1dp"
            android:background="@color/gray"/>
        <Button
            android:layout_marginTop="@dimen/dp_20"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/create_family_bt"
            android:text="创建"/>

    </LinearLayout>

</LinearLayout>