<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="25dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/base_search_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/back"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="36dp"
            android:background="@drawable/search_project_bg"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:background="@drawable/search_project" />
            <com.xhwl.commonlib.uiutils.ClearEditText
                android:id="@+id/base_search_editor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin_text_normal_size"
                android:layout_marginEnd="@dimen/margin_text_normal_size"
                android:background="@null"
                android:textSize="17sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/base_search_start"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:text="搜索"
            android:textSize="@dimen/text_large_size"
            android:textColor="@color/color_3E3E3E"
            android:layout_gravity="center"
            android:gravity="center"/>
    </LinearLayout>

</LinearLayout>
