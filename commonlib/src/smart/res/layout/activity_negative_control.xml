<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3"
    android:orientation="vertical">

    <include layout="@layout/top_layout"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_switch_1"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:src="@drawable/icon_iot_single_bit_switch_bg"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/image_switch_2"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:src="@drawable/icon_iot_double_bit_switch_bg"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp">

            <ImageView
                android:id="@+id/image_switch_3"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:src="@drawable/icon_iot_three_bit_switch_bg"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/image_switch_4"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:src="@drawable/icon_iot_four_bit_switch_bg"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>


    </LinearLayout>


</LinearLayout>