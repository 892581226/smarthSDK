<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/icon_update_top_layout"
        layout="@layout/top_layout"/>

    <TextView
        android:id="@+id/icon_update_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请选择场景图标"
        android:layout_marginStart="@dimen/base_margin_size"
        android:textColor="@color/color_9E9E9E"
        android:layout_below="@+id/icon_update_top_layout"
        android:layout_marginTop="@dimen/margin_top_right"
        android:layout_marginBottom="@dimen/margin_normal_size"
        android:textSize="@dimen/text_normal_size"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/icon_update_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/icon_update_hint"
        android:layout_marginStart="@dimen/base_margin_size"
        android:layout_marginEnd="@dimen/base_margin_size"/>

</RelativeLayout>