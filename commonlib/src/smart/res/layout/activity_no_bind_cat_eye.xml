<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <include
        android:id="@+id/device_connect_step_top"
        layout="@layout/top_layout"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.将二维码朝向室外猫眼摄像机镜头"
            android:layout_marginTop="15dp"/>



        <FrameLayout
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp">
            <ImageView
                android:id="@+id/image_bitmap"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_gravity="center_horizontal" />

        </FrameLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3.听到“滴”声10s后点击下一步"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/tv_confirm_add_device"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="下一步"
            android:textSize="18dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/next_bg"/>

    </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_pro"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#44000000"
        android:gravity="center">


        <ProgressBar
            android:layout_width="100dp"
            android:layout_height="100dp"/>

    </LinearLayout>


</RelativeLayout>