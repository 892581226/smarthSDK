<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.smarthome.iot.SceneSixSwitchActivity">

    <include
        android:id="@+id/six_bit_scene_switch_top"
        layout="@layout/top_layout"/>

    <LinearLayout
        android:id="@+id/six_scene_switch_ll"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:background="@drawable/icon_iot_four_bit_switch_bg"
        android:layout_marginTop="15dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        app:layout_constraintTop_toBottomOf="@+id/six_bit_scene_switch_top"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="bottom"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/six_bit_switch_one"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/base_margin_size"
            android:src="@drawable/icon_iot_scene_bit_switch_close"
            android:layout_gravity="bottom"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/six_bit_switch_two"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/icon_iot_scene_bit_switch_close"
            android:layout_gravity="bottom"
            android:scaleType="centerCrop"
            android:layout_marginStart="2dp"/>

        <ImageView
            android:id="@+id/six_bit_switch_three"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/icon_iot_scene_bit_switch_close"
            android:layout_gravity="bottom"
            android:scaleType="centerCrop"
            android:layout_marginStart="2dp"/>

        <ImageView
            android:id="@+id/six_bit_switch_four"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/icon_iot_scene_bit_switch_close"
            android:layout_gravity="bottom"
            android:scaleType="centerCrop"
            android:layout_marginEnd="@dimen/base_margin_size"
            android:layout_marginStart="2dp"/>

        <!--<ImageView
            android:id="@+id/six_bit_switch_five"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/icon_iot_three_bit_switch_close"
            android:layout_gravity="bottom"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/six_bit_switch_six"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/margin_normal_size"
            android:src="@drawable/icon_iot_three_bit_switch_close"
            android:layout_gravity="bottom"
            android:visibility="gone"/>-->
    </LinearLayout>

    <android.widget.Space
        android:id="@+id/space"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/six_scene_switch_ll"
        app:layout_constraintEnd_toEndOf="@+id/six_scene_switch_ll"
        app:layout_constraintStart_toStartOf="@+id/six_scene_switch_ll"/>
    <LinearLayout
        android:id="@+id/six_scene_switch_text_ll"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintTop_toBottomOf="@+id/space"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/six_scene_switch_one"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="回家"/>
        <TextView
            android:id="@+id/six_scene_switch_two"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="回家"/>
        <TextView
            android:id="@+id/six_scene_switch_three"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="回家"/>
        <TextView
            android:id="@+id/six_scene_switch_four"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="回家"/>

        <!--<TextView
            android:id="@+id/six_scene_switch_five"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="回家"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/six_scene_switch_six"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="回家"
            android:visibility="gone"/>-->
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/six_scene_switch_ll"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="（点击文字可设置关联场景）"
        android:layout_marginBottom="@dimen/dp_4"/>

    <androidx.recyclerview.widget.RecyclerView
        android:visibility="gone"
        android:id="@+id/scene_history_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/six_scene_switch_text_ll"
        app:layout_constraintBaseline_toBaselineOf="parent"
        app:layout_constraintHeight_percent=".50"
        android:background="@color/color_F8F8F8"/>

</androidx.constraintlayout.widget.ConstraintLayout>