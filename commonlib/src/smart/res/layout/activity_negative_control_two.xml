<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f3f3f3">

    <include layout="@layout/top_layout"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击文字可设置关联主控开关按键"
        android:textSize="12dp"
        android:textColor="#A5A5A5"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"/>

    <ImageView
        android:id="@+id/image_bitmap"
        android:layout_width="306dp"
        android:layout_height="203dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="9dp"
        android:src="@drawable/icon_iot_single_bit_switch_bg"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:id="@+id/tv_bind_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="未绑定"
            android:textColor="#0074FF"
            android:textSize="12dp"
            android:visibility="gone"/>

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_bind_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="未绑定"
            android:textColor="#0074FF"
            android:textSize="12dp"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_bind_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="未绑定"
            android:textColor="#0074FF"
            android:textSize="12dp"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_bind_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="未绑定"
            android:textColor="#0074FF"
            android:textSize="12dp"/>

    </LinearLayout>

</LinearLayout>