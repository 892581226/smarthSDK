<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".iot.DoubleCurtainSwitchActivity">
    <include
        android:id="@+id/curtain_top"
        layout="@layout/top_layout"/>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.195">

        <ImageView
            android:layout_marginTop="@dimen/dp_4"
            android:id="@+id/smart_socket"
            android:layout_width="@dimen/album_dp_200"
            android:layout_height="@dimen/album_dp_200"
            android:layout_gravity="center"
            android:background="@drawable/double_curtain_switch" />
        <ImageView
            android:layout_gravity="center"
            android:layout_width="@dimen/album_dp_200"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_40"
            android:background="@drawable/absolute"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/drawable_black"
        android:orientation="horizontal"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TextView
            android:layout_marginTop="@dimen/album_dp_15"
            android:layout_marginBottom="@dimen/album_dp_15"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/margin_normal_size"
            android:layout_weight="1"
            android:gravity="center"
            android:text="轨道一"
            android:textColor="@color/text_black"
            android:textSize="@dimen/album_dp_15" />

        <ImageView
            android:layout_marginTop="@dimen/album_dp_15"
            android:layout_marginBottom="@dimen/album_dp_15"
            android:id="@+id/curtain_open"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/margin_normal_size"
            android:layout_weight="1"
            android:src="@drawable/icon_iot_double_curtain_open_uncheck" />

        <ImageView
            android:layout_marginTop="@dimen/album_dp_15"
            android:layout_marginBottom="@dimen/album_dp_15"
            android:id="@+id/curtain_stop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/icon_iot_double_curtain_stop_uncheck" />

        <ImageView
            android:layout_marginTop="@dimen/album_dp_15"
            android:layout_marginBottom="@dimen/album_dp_15"
            android:id="@+id/curtain_close"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/margin_normal_size"
            android:layout_weight="1"
            android:src="@drawable/icon_iot_double_curtain_close_uncheck" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/drawable_black"
        android:orientation="horizontal"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <TextView
            android:layout_marginTop="@dimen/album_dp_15"
            android:layout_marginBottom="@dimen/album_dp_15"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/margin_normal_size"
            android:layout_weight="1"
            android:gravity="center"
            android:text="轨道二"
            android:textColor="@color/text_black"
            android:textSize="@dimen/album_dp_15" />

        <ImageView
            android:layout_marginTop="@dimen/album_dp_15"
            android:layout_marginBottom="@dimen/album_dp_15"
            android:id="@+id/double_curtain_open"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/margin_normal_size"
            android:layout_weight="1"
            android:src="@drawable/icon_iot_double_curtain_open_uncheck" />

        <ImageView
            android:layout_marginTop="@dimen/album_dp_15"
            android:layout_marginBottom="@dimen/album_dp_15"
            android:id="@+id/double_curtain_stop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/icon_iot_double_curtain_stop_uncheck" />

        <ImageView
            android:layout_marginTop="@dimen/album_dp_15"
            android:layout_marginBottom="@dimen/album_dp_15"
            android:id="@+id/double_curtain_close"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/margin_normal_size"
            android:layout_weight="1"
            android:src="@drawable/icon_iot_double_curtain_close_uncheck" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="@dimen/textSize_alert_msg"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_iot_device_bottom"/>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>