<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/drop_pop_menu_item_horizontal_margin"
    android:paddingRight="@dimen/drop_pop_menu_item_horizontal_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/drop_pop_menu_item_height"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/drop_pop_menu_icon_width"
            android:layout_height="@dimen/drop_pop_menu_icon_width"
            android:layout_marginRight="@dimen/drop_pop_menu_icon_text_margin" />

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:maxLines="1"
            android:maxLength="16"
            android:ellipsize="end"
            android:text="文字"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/drop_pop_menu_text_size" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d8d8d8"/>
</LinearLayout>